generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  SUPER_ADMIN
}

enum ApplicationStatus {
  PENDING
  PROCESS
  COMPLETED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(USER)
  alamat        String?
  telepon       String?
  emailVerified DateTime?
  image         String?
  resetToken    String?   @unique
  resetTokenExp DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Company logo
  companyLogo  String?

  // Storage quota tracking
  storageUsed  BigInt  @default(0)
  storageLimit BigInt  @default(52428800) // 50MB
  isPro        Boolean @default(false)

  accounts      Account[]
  sessions      Session[]
  userDocuments UserDocument[]
  applications  Application[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ===== Document Management System =====

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  applications Application[]
}

model Application {
  id        String            @id @default(cuid())
  userId    String
  serviceId String
  name      String            @default("") // Nama bisnis, misal: "PT Maju Bersama"
  status    ApplicationStatus @default(PENDING)
  estimate  String?           // Estimasi selesai
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  service   Service  @relation(fields: [serviceId], references: [id])
  documents ApplicationDocument[]
  companyData CompanyData?
}

model CompanyData {
  id            String   @id @default(cuid())
  applicationId String   @unique
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  // Data Penting
  emailPerusahaan   String?
  emailPassword     String?
  akunOss           String?
  akunOssPassword   String?
  
  directors     Director[]
  agreements    Agreement[]
  taxReports    TaxReport[]
}

model Director {
  id            String      @id @default(cuid())
  companyDataId String
  companyData   CompanyData @relation(fields: [companyDataId], references: [id], onDelete: Cascade)
  
  name          String
  jabatan       String
  masaJabatan   String?     // e.g. "5 Tahun"
  akhirMenjabat DateTime?
  status        String      @default("Aktif")
}

model Agreement {
  id            String      @id @default(cuid())
  companyDataId String
  companyData   CompanyData @relation(fields: [companyDataId], references: [id], onDelete: Cascade)
  
  title         String
  validUntil    DateTime?
  status        String      // Aktif, Expired
}

model TaxReport {
  id            String      @id @default(cuid())
  companyDataId String
  companyData   CompanyData @relation(fields: [companyDataId], references: [id], onDelete: Cascade)
  
  title         String      // e.g. "Laporan Pajak Masa Mei"
  description   String?
  status        String      // SELESAI, BELUM LAPOR
  date          DateTime?
}

model ApplicationDocument {
  id             String   @id @default(cuid())
  applicationId  String
  name           String
  fileUrl        String
  fileSize       Int      @default(0)
  fileType       String?
  category       String?  // Legalitas, Perpajakan, etc.
  adminNote      String?
  documentNumber String?  // No Dokumen (e.g. NIB, NPWP number)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
}

model UserDocument {
  id        String   @id @default(cuid())
  userId    String
  name      String
  fileUrl   String
  fileSize  Int
  fileType  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
